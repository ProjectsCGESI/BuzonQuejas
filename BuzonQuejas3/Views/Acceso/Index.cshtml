@model Usuario
@{
    Layout = null;
    var error = ViewData["error"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/imagenes/faviconV2.png">
</head>
<body>
    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="~/imagenes/user.png" class="brand_logo" alt="Logo">
                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">
                    <form asp-controller="Acceso" asp-action="Index" method="post">
                        <div class="form-group">
                            <input type="email" asp-for="Correo" class="form-control input_user" placeholder="Correo Electrónico" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="Clave" class="form-control input_user" placeholder="Contraseña" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @{
                                if (true.Equals(ViewData["error"]))
                                {
                                    <div class="alert alert-warning alert-dismissible fade show" style="font-size:12px" role="alert">
                                        <strong>Lo sentimos!</strong> El correo o la contraseña son incorrectos, intente de nuevo.
                                        <button type="button" class="close" data-dismiss="alert">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                            }
                        </div>
                        <div class="d-flex justify-content-center mt-4 login_container">
                            <button type="submit" class="btn login_btn">Ingresar</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <script src="~/js/Login.js" asp-append-version="true"></script>
    }
</body>
</html>
