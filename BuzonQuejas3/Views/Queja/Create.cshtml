@model BuzonQuejas3.Models.Queja
@*@using Microsoft.AspNetCore.Identity*@

@{
    ViewData["Title"] = "Nueva Queja";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var DepartamentoUsuario = Context.User.FindFirst("DepartamentoID").Value;

}

<link rel="stylesheet" href="~/css/CrearQueja.css" />

<div class="row justify-content-center">
    <div class="col-12 ">
        <h1 class="text-center titulo-nueva">Nueva Queja</h1>
    </div>
    @{
        if (ViewBag.SuccessMessage != null)
        {
            <div class="col-12">
                <div class="row justify-content-center">
                    <div class="col-6">
                        @*<div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>@ViewBag.SuccessMessage</strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <a asp-action="Create" class="btn seguimiento-bttn ">Nueva</a>
                            </div>*@
                    </div>
                    <div class="col-6">
                        @*<a asp-action="Create" class="btn seguimiento-bttn ">Nueva</a>*@
                        <div class="modal fade modal-ok" id="exampleModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Tarea exitosa</h5>
                                        @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>*@
                                    </div>
                                    <div class="modal-body">
                                        <strong>@ViewBag.SuccessMessage</strong>
                                    </div>
                                    <div class="modal-footer">
                                        @*<button asp-action="Create" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
                                        @{
                                            if (User.IsInRole("Administrador") || User.IsInRole("Root"))
                                            {
                                                <a asp-action="Index" class="btn aceptar-bttn">Aceptar</a>
                                            }
                                            else
                                            {
                                                <a asp-action="Create" class="btn aceptar-bttn">Aceptar</a>
                                            }
                                        }
                                        @*<a asp-action="Create" class="btn aceptar-bttn">Aceptar</a>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        }
    }
    <div class="col-6">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Estatus" value="Pendiente" />
            <input type="hidden" asp-for="AtendidoPor" value="na" />
            <input type="hidden" asp-for="Resolucion" value="na" />
            <input type="hidden" asp-for="FechaAtencion" value="@DateTime.Now" />
            <input type="hidden" asp-for="DepartamentoID" value=@DepartamentoUsuario />
            <input type="hidden" asp-for="UnidadAdministrativaID" value="88f8cf91-458b-438c-b882-75a842387c64" />
            <div class="form-group mt-3">
                <input asp-for="NombreQuejante" class="form-control" placeholder="Nombre*" />
                <span asp-validation-for="NombreQuejante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Direccion" class="form-control" placeholder="Dirección*" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="MunicipioID" asp-items="ViewBag.municipios" class="form-control">
                    <option value="">Seleccione un municipio</option>
                </select>
                <span asp-validation-for="MunicipioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="MedioID" asp-items="ViewBag.medios" class="form-control">
                    <option value="">Seleccione un medio de recepción</option>
                </select>
                <span asp-validation-for="MedioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Telefono" class="form-control" placeholder="Teléfono*" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Correo" type="email" class="form-control" placeholder="Correo eléctronico*" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="MotivoQueja" class="form-control" placeholder="Motivo de la queja*" />
                <span asp-validation-for="MotivoQueja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="RelatoHechos" class="form-control" placeholder="Relato de hechos*">
                </textarea>
                <span asp-validation-for="RelatoHechos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ServidorInvolucrado" class="form-control" placeholder="Servidor público involucrado*" />
                <span asp-validation-for="ServidorInvolucrado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="CargoID" asp-items="ViewBag.cargos" class="form-control cargoSelect" >
                    <option value="">Seleccione un cargo</option>
                </select>
                <span asp-validation-for="CargoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de creación*</label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enviar" class="btn enviar-bttn-queja" />
            </div>
        </form>

    </div>
</div>


<script src="~/js/CrearQueja.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
