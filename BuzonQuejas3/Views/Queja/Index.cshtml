            @*<input type="submit" value="Buscar" class="btn form-control btn-sm btn-dark" />*@
            <!--</div>
                                <div class="col-4">
                                    <input type="submit" value="Buscar" class="btn  btn-sm buscar-bttn" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-1">
                        <div class="col-2">
                            <a class="btn btn-sm  btn-dark" asp-action="Index">Restaurar</a>
                        </div>

                    </div>
                </div>
            </div>-->
        </div>
    </div>
    <div class="col-12 ">
        <div class="table-responsive border contenedor-tabla">
            <table class="table table-hover ">
                <thead>
                    <tr class="align-text-top header-table">
                        <th class="align-text-top">
                            @Html.DisplayName("Nombre Quejante")
                        </th>
                        <th class="align-text-top">
                            <a class="text-dark" asp-action="Index" asp-route-filtro="@ViewData["FiltroFecha"]">
                                @Html.DisplayName("Fecha")
                                <span class="material-icons size-order ">arrow_downward</span>
                            </a>
                        </th>
                        @if (User.IsInRole("Administrador") || User.IsInRole("Root"))
                        {
                            <th class="align-text-top col-4 ">
                                <a class="text-dark" asp-action="Index" asp-route-filtro="@ViewData["FiltroUnidad"]">
                                    @*@Html.DisplayName("Unidad Administrativa")*@
                                    Unidad Administrativa
                                    <span class="material-icons size-order ">arrow_downward</span>
                                </a>
                            </th>
                        }
                        else
                        {
                            <th class="align-text-top col-4 ">
                                @Html.DisplayName("Unidad Administrativa")
                            </th>
                        }
                        <th class="align-text-top">
                            @Html.DisplayName("Motivo")
                        </th>
                        <th class="align-text-top">
                            @Html.DisplayName("Hechos")
                        </th>
                        <th class="align-text-top">
                            @Html.DisplayName("Servidor Involucrado")
                        </th>
                        <th class="align-text-top">
                            @Html.DisplayName("Reasignar")
                        </th>
                        <th class="align-text-top">
                            @Html.DisplayName("Seguimiento ")
                        </th>
                        <th class="align-text-top">
                            <a class="text-dark" asp-action="Index" asp-route-filtro="@ViewData["FiltroEstatus"]">
                                <div class="row">
                                    <div class="col-2 mr-4">
                                        @Html.DisplayName("Estatus")
                                    </div>
                                    <div class="col-1 ">
                                        <span class="material-icons size-order ">arrow_downward</span>
                                    </div>

                                </div>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreQuejante)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.FechaCreacion)
                            </td>
                            <td class="col-2 ">
                                @Html.DisplayFor(modelItem => item.UnidadAdministrativa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MotivoQueja)
                            </td>
                            <td class="col-2 h-25 td-index">
                                @Html.DisplayFor(modelItem => item.RelatoHechos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServidorInvolucrado)
                            </td>
                            <td class="text-center">

                                <button type="button" class="btn reasignar reasignar-bttn align-top" data-toggle="modal" data-target="#exampleModal" id="@item.QuejaID">
                                    Reasignar
                                </button>
                            </td>
                            <td class="text-center">

                                <a asp-action="Seguimiento" asp-route-id="@item.QuejaID" class="btn seguimiento-bttn "><span class="material-icons size-icon ">shortcut</span></a>
                            </td>
                            <td>
                                @{
                                    if (@item.Estatus == "Pendiente")
                                    {
                                        <p class="text-danger">Pendiente</p>
                                    }
                                    else
                                    {
                                        <p class="text-success">Atendido</p>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal fade" id="exampleModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-center align-content-center">
                        <h5 class="modal-title  " id="exampleModalLabel">Reasignar queja</h5>
                        @*<button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-modal-bttn">
                            <span aria-hidden="true">&times;</span>
                        </button>*@
                    </div>
                    <div class="modal-body" id="modalReasignar">
                        <form asp-controller="Queja" asp-action="Reasignar">
                            <div class="form-group" id="SelectUnidad">
                                <label for="exampleInputEmail1">Unidad administrativa actual</label>
                                <input type="text" readonly class="form-control" id="showID">
                            </div>
                            <div class="form-group">
                                <label>Unidad administrativa a reasignar</label>
                                <select class="form-control" id="unidad" name="unidadId">
                                    <option id="optionPrincipal"></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="text" hidden class="form-control" name="QuejaId" id="QuejaId">
                            </div>
                            <button type="submit" class="btn reasignar-modal-bttn" id="reasignar-bttn">Reasignar</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn salir-modal-bttn" data-dismiss="modal" id="salir-bttn">Salir</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Quejas.js" asp-append-version="true"></script>
