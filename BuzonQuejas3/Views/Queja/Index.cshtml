@model IEnumerable<BuzonQuejas3.Models.Queja>

@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UnidadAdministrativa = (List<UnidadAdministrativa>)ViewData["unidades"];
    //var username = Context.User.FindFirst("Correo");
    string nombre = ViewBag.nombreBuscar;
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
@*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
<link rel="stylesheet" href="~/css/IndexQueja.css" />
@*<div class="container-fluid">*@
<div class="row align-items-center">
    <div class="col-12">
        <div class="row align-items-center mb-5">
            <div class="col-12 align-self-center mb-5">
                <h1 class="text-center titulo">Buzón de quejas  </h1>
            </div>
            <div class="col-12">
                <div class="row  align-items-center">
                    <div class="col-6">
                        <form asp-controller="Queja" asp-action="Index">
                            <div class="form-row align-items-center">
                                <div class="col-8">
                                    <input type="text" name="buscar" class="form-control" placeholder="nombre">
                                    @*<input type="submit" value="Buscar" class="btn form-control btn-sm btn-dark" />*@
                                </div>
                                <div class="col-4">
                                    <input type="submit" value="Buscar" class="btn  btn-sm buscar-bttn" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-1">
                        <div class="col-2">
                            <a class="btn btn-sm  btn-dark" asp-action="Index">Restaurar</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 ">
        <div class="table-responsive border contenedor-tabla">
            <table class="table table-hover ">
                <thead>
                    <tr class="align-text-top header-table">
                        <th>
                            @Html.DisplayName("Nombre Quejante")
                            @*@username*@
                            @*@Html.DisplayNameFor(model => model.NombreCreador)*@
                        </th>
                        <!--<th>
                            @Html.DisplayName("Dirección")-->
                        @*@Html.DisplayNameFor(model => model.Direccion)*@
                        <!--</th>
                        <th>
                            @Html.DisplayName("Teléfono")-->
                        @*@Html.DisplayNameFor(model => model.Telefono)*@
                        <!--</th>
                        <th>
                            @Html.DisplayName("Correo")-->
                        @*@Html.DisplayNameFor(model => model.Correo)*@
                        <!--</th>-->
                        <th class="align-text-top">
                            @Html.DisplayName("Fecha")
                            @*@Html.DisplayNameFor(model => model.FechaCreacion)*@
                        </th>
                        <th class="align-text-top">
                            @Html.DisplayName("Unidad Administrativa")
                            @*@Html.DisplayNameFor(model => model.FechaCreacion)*@
                        </th>
                        <th class="align-text-top">
                            @Html.DisplayName("Motivo")
                            @*@Html.DisplayNameFor(model => model.MotivoQueja)*@
                        </th>
                        <th class="align-text-top">
                            @Html.DisplayName("Hechos")
                            @*@Html.DisplayNameFor(model => model.RelatoHechos)*@
                        </th>
                        <th class="align-text-top">
                            @Html.DisplayName("Servidor Involucrado")
                            @*@Html.DisplayNameFor(model => model.ServidorInvolucrado)*@
                        </th>
                        <th class="align-text-top">
                            @Html.DisplayName("Seguimiento ")
                        </th>
                        <th class="align-text-top">
                            @{ if (!String.IsNullOrEmpty(nombre))
                                {

                                    <a class="text-dark" asp-action="Index" asp-route-filtro="@ViewData["FiltroEstatus"]" asp-route-buscar="@nombre">
                                        <div class="row">
                                            <div class="col-2 mr-4">
                                                @Html.DisplayName("Estatus")
                                            </div>
                                            <div class="col-1 ">
                                                <span class="material-icons size-order ">arrow_downward</span>
                                            </div>

                                        </div>
                                    </a>
                                }
                                else
                                {
                                    <a class="text-dark" asp-action="Index" asp-route-filtro="@ViewData["FiltroEstatus"]">
                                        <div class="row">
                                            <div class="col-2 mr-4">
                                                @Html.DisplayName("Estatus")
                                            </div>
                                            <div class="col-1 ">
                                                <span class="material-icons size-order ">arrow_downward</span>
                                            </div>

                                        </div>
                                    </a>

                                }


                            }



                            @*@Html.DisplayNameFor(model => model.FechaCreacion)*@
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreQuejante)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.FechaCreacion)
                            </td>
                            <td class="col-2 ">


                                @foreach (var unidad in UnidadAdministrativa)
                                {
                                    if (!item.UnidadAdministrativaID.ToString().Equals(""))
                                    {
                                        if (unidad.UnidadAdministrativaID.Equals(item.UnidadAdministrativaID))
                                        {
                                            @unidad.Nombre
                                            break;
                                        }
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MotivoQueja)
                            </td>
                            <td class="col-2 h-25 td-index">
                                @Html.DisplayFor(modelItem => item.RelatoHechos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServidorInvolucrado)
                            </td>
                            <td class="text-center">

                                <a asp-action="Seguimiento" asp-route-id="@item.QuejaID" class="btn seguimiento-bttn "><span class="material-icons size-icon ">shortcut</span></a>
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.Estatus)*@
                                @{
                                    if (@item.Estatus == "Pendiente")
                                    {
                                        <p class="text-danger">Pendiente</p>
                                    }
                                    else
                                    {
                                        <p class="text-success">Atendido</p>
                                    }
                                }
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>
@*</div>*@
