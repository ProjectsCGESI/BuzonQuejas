@model BuzonQuejas3.Models.Usuario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/EliminarUsuario.css" />

<div class="row justify-content-center mt-5">
    <div class="col-12">
        <h1 class="text-center titulo-eliminar-usuario mb-2">Eliminar Usuario</h1>
    </div>
    <div class="col-6 mt-5">
        <div>
            <h4 class="text-center">Datos del usuario</h4>
            <hr />
            <dl class="row">
                <dt class="col-6 text-right">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-6 text-right">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-6 text-right">
                    @Html.DisplayNameFor(model => model.Clave)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.Clave)
                </dd>
                <dt class="col-6 text-right">
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.Activo)
                </dd>
                <dt class="col-6 text-right">
                    @Html.DisplayNameFor(model => model.UnidadRemitente)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.UnidadRemitente.Nombre)
                </dd>
                <dt class="col-6 text-right">
                    @Html.DisplayNameFor(model => model.Rol)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.Rol.Nombre)
                </dd>
                <dt class="col-6 text-right">
                    @Html.DisplayNameFor(model => model.UnidadAdministrativa)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.UnidadAdministrativa.Nombre)
                </dd>
                <dd class="col-12 text-center mt-4">
                    <form asp-action="EliminarUsuario">
                        <input type="hidden" asp-for="UsuarioID" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
                    </form>
                </dd>
            </dl>

        </div>
    </div>
</div>


