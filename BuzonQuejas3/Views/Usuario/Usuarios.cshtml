@model IEnumerable<BuzonQuejas3.Models.UsuarioMostrar>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="~/css/IndexUsuario.css" />

<div class="row justify-content-center mt-5">
    <div class="col-12">
        <h1 class="text-center titulo">Usuarios</h1>
    </div>
    <div class="col-12 mt-2">
        <div class="row justify-content-between">

            <div class="col-6 mb-3">
                <div class="col-auto  ml-auto ">
                    <form asp-controller="Usuario" asp-action="Usuarios">
                        <div class="form-row align-items-center">
                            <div class="col-auto">
                                <input type="text" name="buscar" value="@ViewData["filtroBuscar"]" class="form-control">
                            </div>
                            <div class="col-auto align-self-center">
                                <input type="submit" value="Buscar" class="btn  btn-sm  buscar-bttn" />
                            </div>
                            <div class="col-auto align-self-center">
                                <a class="btn btn-sm  buscar-bttn" asp-action="Usuarios">Restaurar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-6 mb-2">
                <p class="text-right ">
                    <a class="btn agregar-bttn text-center" asp-action="AgregarUsuario">
                        Agregar usuario
                    </a>
                </p>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="table-responsive border contenedor-tabla">
            <table class="table">
                <thead class="header-usuarios">
                    <tr class="align-text-top header-table mt-0">
                        <th class="col-3 header-text-usuarios">
                            <a class="header-text-usuarios" asp-action="Usuarios" asp-route-filtro="@ViewData["FiltroNombre"]" asp-route-buscar="@ViewData["filtroBuscar"]">
                                @Html.DisplayNameFor(model => model.Nombre)
                                <span class="material-icons size-order ">height</span>
                            </a>
                        </th>
                        <th class="col-2 header-text-usuarios">
                            @Html.DisplayNameFor(model => model.Correo)
                        </th>
                        <th class="col-1 text-center" >
                            @Html.DisplayNameFor(model => model.Activo)
                        </th>
                        <th class="col-1 header-text-usuarios">
                            @Html.DisplayNameFor(model => model.Departamento)
                        </th>
                        <th class="col-2 header-text-usuarios">
                            @Html.DisplayNameFor(model => model.Rol)
                        </th>
                        <th class="col-2 header-text-usuarios">
                            @Html.DisplayName("Unidad Administrativa")
                        </th>
                        <th class="col-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="table-row">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Correo)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Activo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Departamento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rol)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnidadAdministrativa)
                                </td>
                                <td class="text-center">
                                    <a asp-action="EditarUsuario" asp-route-id="@item.UsuarioID" class="btn editar-usuario-bttn">
                                        <span class="material-icons size-icon">
                                            edit
                                        </span>
                                    </a>
                                </td>
                                @*<td class="text-center">
                        <a asp-action="EliminarUsuario" asp-route-id="@item.UsuarioID" >
                            <span class="material-icons size-icon">
                                delete
                            </span>
                        </a>
                    </td>*@
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="table-row">
                            <td colspan="7" class="text-center">
                                No se encontraron resultados
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
